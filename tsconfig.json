{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitReturns": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts",
    "test",
    "contracts",
    "typechain-types"
  ]
}
